    "pre_install": "Rename-Item \"$dir\\Clash.Meta-windows-amd64-compatible.exe\" 'clash-meta.exe'",
    "post_install": [
        "if ((Test-Path \"$scoopdir\\apps\\clash-for-windows\\current\\Clash for Windows.exe\") -and !(Test-Path \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe.bac\")) {",
        "    if (Test-Path \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe\") {",
        "        Rename-Item \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe\" \"clash-win64.exe.bac\"",
        "    }",
        "    New-Item \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe\" -ItemType HardLink -Value \"$dir\\clash-meta.exe\" | Out-Null",
        "},",
        "if (Test-Path \"$scoopdir\\apps\\clash-verge\\current\\Clash Verge.exe\") {",
        "    Rename-Item \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe\" \"clash-meta.exe.bac\"",
        "    New-Item \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe\" -ItemType HardLink -Value \"$dir\\clash-meta.exe\" | Out-Null",
        "}"
    ],
    "uninstaller": {
        "script": [
            "if (Test-Path \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe.bac\") {",
            "    Remove-Item \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe\" -Force",
            "    Rename-Item \"$scoopdir\\apps\\clash-for-windows\\current\\resources\\static\\files\\win\\x64\\clash-win64.exe.bac\" \"clash-win64.exe\"",
            "},",
            "if (Test-Path \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe.bac\") {",
            "    Remove-Item \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe.exe\" -Force",
            "    Rename-Item \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe.bac\" \"clash-meta.exe\"",
            "}"
        ]
    },
    "checkver": "github",
