    "installer": {
        "script": [
            "$extracted = \"$dir\\extracted\"",
            "$msi = \"$dir\\msi\"",
            "Expand-DarkArchive \"$dir\\$fname\" \"$extracted\"",
            "Expand-MsiArchive \"$extracted\\AttachedContainer\\PMP.msi\" \"$msi\"",
            "Move-Item \"$msi\\Msi\\*\" \"$dir\" -Force",
            "Remove-Item $extracted, $msi, \"$dir\\$fname\" -Force -Recurse",
            "",
            "New-item -ItemType Directory -Path \"$env:APPDATA\\Jellyfin Media Player\" -ErrorAction SilentlyContinue",
            "New-item -ItemType Directory -Path \"$env:APPDATA\\Jellyfin Media Player\\QtWebEngine\" -ErrorAction SilentlyContinue",
            "New-item -ItemType Directory -Path \"$env:APPDATA\\Jellyfin Media Player\\QtWebEngine\\Default\" -ErrorAction SilentlyContinue",
            "New-item -ItemType Directory -Path \"$env:APPDATA\\Jellyfin Media Player\\QtWebEngine\\Default\\Local Storage\" -ErrorAction SilentlyContinue",
            "New-item -ItemType Directory -Path \"$env:APPDATA\\Jellyfin Media Player\\QtWebEngine\\Default\\Local Storage\\leveldb\" -ErrorAction SilentlyContinue",
            "Move-Item -Path \"$persist_dir\\MANIFEST-000001\" -Destination \"$env:APPDATA\\Jellyfin Media Player\\QtWebEngine\\Default\\Local Storage\\leveldb\\MANIFEST-000001\" -ErrorAction SilentlyContinue"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path \"$env:APPDATA\\Jellyfin Media Player\" -Recurse -ErrorAction SilentlyContinue",
            "Remove-Item -Path \"$env:APPDATA\\JellyfinMediaPlayer\" -Recurse -ErrorAction SilentlyContinue"
        ]
    },
    "shortcuts": [
        [
            "JellyfinMediaPlayer.exe",
            "Jellyfin Media Player"
        ]
    ],
