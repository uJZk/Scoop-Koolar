{
    "version": "0.8",
    "description": "RGB lighting control that does not depend on manufacturer software.",
    "homepage": "https://openrgb.org",
    "license": "GPL-2.0-only",
    "suggest": {
        "vcredist2022": "vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://openrgb.org/releases/release_0.8/OpenRGB_0.8_Windows_64_fb88964.zip",
            "hash": "8715a4b2e8cc821a53c861b16ee5ae00ac8bbed10009a6cabfc538367a1ea030",
            "extract_dir": "OpenRGB Windows 64-bit"
        },
        "32bit": {
            "url": "https://openrgb.org/releases/release_0.8/OpenRGB_0.8_Windows_32_fb88964.zip",
            "hash": "4cbc90cd93da43b1f9c4f32ebaf06d08c45553cf693f170d268850d95860e4fd",
            "extract_dir": "OpenRGB Windows 32-bit"
        }
    },
    "shortcuts": [
        [
            "OpenRGB.exe",
            "OpenRGB"
        ]
    ],
    "pre_install": [
        "if (-not (Test-Path \"$persist_dir\\APPDATA\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory -ErrorAction SilentlyContinue | Out-Null",
        "   New-item \"$persist_dir\\APPDATA\" -ItemType Directory -ErrorAction SilentlyContinue | Out-Null",
        "   Move-Item -Path \"$env:APPDATA\\OpenRGB\" -Destination \"$persist_dir\\APPDATA\" -ErrorAction SilentlyContinue",
        "} else {",
        "   Remove-Item -Path \"$env:APPDATA\\OpenRGB\" -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "post_install": [
        "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name Koolar) scripts/DoradoUtils.psm1)",
        "Mount-ExternalRuntimeData -Source \"$persist_dir\\APPDATA\" -Target \"$env:APPDATA\\OpenRGB\"",
        "Remove-Module -Name DoradoUtils"
    ],
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name Koolar) scripts/DoradoUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\OpenRGB\"",
            "Remove-Module -Name DoradoUtils"
        ]
    },
    "checkver": {
        "url": "https://openrgb.org/releases.html",
        "regex": "/OpenRGB_([\\S]+?)_Windows_64_(?<commit>[\\da-fA-F]{7})\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://openrgb.org/releases/release_$version/OpenRGB_$version_Windows_64_$matchCommit.zip"
            },
            "32bit": {
                "url": "https://openrgb.org/releases/release_$version/OpenRGB_$version_Windows_32_$matchCommit.zip"
            }
        }
    }
}
