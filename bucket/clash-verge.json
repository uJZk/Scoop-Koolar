    ],
    "persist": ".config",
    "post_install": [
        "# https://github.com/zzzgydi/clash-verge/issues/21#issuecomment-1097467046=",
        "if (!(Test-Path \"$persist_dir\\.config\\PORTABLE\")) {",
        "    New-Item -Path \"$persist_dir\\.config\\PORTABLE\" -ItemType file | Out-Null",
        "}",
        "",
        "if (!(Test-Path \"$dir\\clash-meta.exe\") -and (Test-Path \"$scoopdir\\apps\\clash-meta\\current\\clash-meta.exe\")) {",
        "    New-Item -Path \"$dir\\clash-meta.exe\" -ItemType HardLink -Value \"$scoopdir\\apps\\clash-meta\\current\\clash-meta.exe\" | Out-Null",
		"}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/zzzgydi/clash-verge/releases/download/v$version/Clash.Verge_$version_x64_portable.zip"
    }
