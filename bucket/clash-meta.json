    "post_install": [
        "if ((Test-Path \"$scoopdir\\apps\\clash-for-windows\\current\\Clash for Windows.exe\") -and !(Test-Path \"$scoopdir\\apps\\clash-verge\\current\\clash-meta.exe.bac\")) {",
